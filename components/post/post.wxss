.postItem {
  box-sizing: border-box;
  width: 100%;
  font-size: 12px;
  background-color: #fff;
  margin: 10px 0;
  padding: 0 10px;
}
.item-header,
.item-post,
.item-remark
{
  width: 100%;
}
.item-header {
  position: relative;
}
.item-username {
  font-weight: 700;
}
.item-date {
  font-size: 10px;
}
.del {
  position: absolute;
  top: 5px;
  right: 0;
  width: 20px;
  height: 20px;
  background-color: #fff;
}
.del .del-img {
  width: 20px;
  height: 20px;
}
.item-post .post-title {
  line-height: 36px;
  font-weight: 700;
}
.post-content {
  width: 100%;
}
.item-remark {
  height: 30px;
  margin:8px 0 0;
}
.remarkcon {
  width: 100%;
  height: 30px;
}
.remarkcon .remarkimg {
  width: 20px;
  height: 20px;
  margin: 0 0 5px 0;
  vertical-align: middle;
}
.remarkcon .numsremark {
  margin-left: 5px;
}