.profile-item {
  width: 100%;
  height: 50px;
  background-color: #fff;
}
.item-common {
  position: relative;
  display: flex;
  align-items: center;
  width: 94%;
  height: 49px;
  margin-left: 3%;
  border-bottom: 1px solid grey;
}
.item-common .item-img {
  width: 30px;
  height: 30px;
  vertical-align: middle;
}
.item-common .item-name {
  margin-left: 5px;
  font-weight: 500;
  font-size: 14px;
}
.item-common::after {
  content: ">";
  position: absolute;
  right: 0;
  color: grey;
}