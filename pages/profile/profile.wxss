page {
  background-color: #F1F1F1;
}
.mainpage {
  width: 100%;
}
.header-profile {
  position: relative;
  width: 100%;
  height: 99px;
  color: white;
  background-color: #11EE96;
}
.login {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-weight: 700;
}
.login image {
  width: 48px;
  height: 48px;
  vertical-align: middle;
}
.login text {
  width: 40px;
  height: 20px;
}
.profile-container {
  position: absolute;
  top: 0;
  right: 30px;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.profile-container image {
  width: 64px;
  height: 64px;
  border-radius: 50%;
}